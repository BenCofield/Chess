
@model Chess.Models.Account.Account

<h1>Register a new account: </h1>

<form method="post" asp-controller="Account" asp-action="CreateAccount">

    <input asp-for="GoogleID" type="hidden" value="@Model.GoogleID"/>

    <div class="mt-3 mb-3">
        <label asp-for="UserName">
            Enter a username:
        </label>

        <input class="form-control" type="text" name="UserName" />
    </div>

    <div class="mb-3">
        <input type="submit" class="btn btn-outline-info" value="Create Account"/><br />
    </div>

</form>

